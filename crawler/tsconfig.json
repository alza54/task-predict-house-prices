{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["es2019"],
      "declaration": true,
      "removeComments": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "types": [
        "@types/node"
      ]
    },
    "include": [
      "src/**/*.ts"
    ]
  }
